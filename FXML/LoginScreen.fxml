<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginScreenController">
   <children>
      <Pane prefHeight="1080.0" prefWidth="1920.0">
         <children>
            <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/LoginScreenUpdated.png" />
               </image>
            </ImageView>
            <TextField fx:id="userName" layoutX="854.0" layoutY="426.0" prefHeight="57.0" prefWidth="264.0" promptText="Full Name">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button layoutX="90.0" layoutY="20.0" mnemonicParsing="false" onAction="#logoutFunction" opacity="0.0" prefHeight="47.0" prefWidth="62.0" />
            <Button fx:id="Login" layoutX="795.0" layoutY="589.0" mnemonicParsing="false" onAction="#isValidUser" opacity="0.0" prefHeight="73.0" prefWidth="333.0" />
            <PasswordField fx:id="password" layoutX="854.0" layoutY="512.0" prefHeight="57.0" prefWidth="215.0" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
            <CheckBox fx:id="checkBox" layoutX="1042.0" layoutY="495.0" mnemonicParsing="false" onAction="#changeVisibility" prefHeight="33.0" prefWidth="21.0" />
            <TextField fx:id="passwordText" layoutX="854.0" layoutY="512.0" prefHeight="57.0" prefWidth="215.0" promptText="Password" visible="false">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="ContinueAsGuestButton" layoutX="885.0" layoutY="676.0" mnemonicParsing="false" onAction="#guestUser" opacity="0.0" prefHeight="33.0" prefWidth="152.0" text="ContinueAsGuestButton" />
         </children>
      </Pane>
   </children>
</AnchorPane>
